<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XAMLCalc.HomePage"
             Title ="XAML Calculator">
  <ContentView.Content>
    <Grid RowSpacing="2"
          ColumnSpacing="3"   
          VerticalOptions="Center"
          HorizontalOptions="Start"
          Padding="20,20,20,20">
      <Grid.WidthRequest>
        <OnPlatform x:TypeArguments="x:Double" iOS="180" Android="180" WinPhone="260" />
      </Grid.WidthRequest>
      <Grid.HeightRequest>
        <OnPlatform x:TypeArguments="x:Double" iOS="300" Android="300" WinPhone="400" />
      </Grid.HeightRequest>
      <Grid.Resources>
        <ResourceDictionary>
          <Style TargetType="Button">
            <Setter Property="FontSize" Value="Small" />
            <Setter Property="BorderWidth" Value="2" />
          </Style>
        </ResourceDictionary>
      </Grid.Resources>

      <Label x:Name="displayLabel"
             Grid.Row="0"
             Grid.Column="0"
             Grid.ColumnSpan="4"
             FontSize="Large"
             LineBreakMode="HeadTruncation"
             VerticalOptions="Center"
             HorizontalTextAlignment="End" />
      <Button x:Name="backspaceButton"
                Text="&#x21E6;"
                Grid.Row="1"
                Grid.Column="2"
                IsEnabled="False"
                Clicked="OnBackspaceButtonClicked" />
      <Button Text="CE" StyleId="CE"
              Grid.Row="1"
              Grid.Column="0"
              WidthRequest="50"
              HeightRequest="50"
              IsEnabled ="False"
              Clicked="OnDigitButtonClicked" />
      <Button Text="&#247;" 
              StyleId="/"
              Grid.Row="1"
              Grid.Column="3"
              WidthRequest="50"
              HeightRequest="50"
              Clicked="OnDigitButtonClicked" />
      <Button Text="C" StyleId="C"
              Grid.Row="1"
              Grid.Column="1"
              Clicked="OnDigitButtonClicked" />
      <Button Text="7" 
              StyleId="7"
              Grid.Row="2"
              Grid.Column="0"
              Clicked="OnDigitButtonClicked" />
      <Button Text="8"
              StyleId="8"
              Grid.Row="2"
              Grid.Column="1"
              Clicked="OnDigitButtonClicked" />
      <Button Text="9"
              StyleId="9"
              Grid.Row="2"
              Grid.Column="2"
              Clicked="OnDigitButtonClicked" />
      <Button Text="X"
              StyleId="*"
              Grid.Row="2"
              Grid.Column="3"
              Clicked="OnDigitButtonClicked" />
      <Button Text="4"
              StyleId="4"
              Grid.Row="3"
              Grid.Column="0"
              Clicked="OnDigitButtonClicked" />
      <Button Text="5"
              StyleId="5"
              Grid.Row="3"
              Grid.Column="1"
              Clicked="OnDigitButtonClicked" />
      <Button Text="6"
              StyleId="6"
              Grid.Row="3"
              Grid.Column="2"
              Clicked="OnDigitButtonClicked" />
      <Button Text="-"
              StyleId="-"
              Grid.Row="3"
              Grid.Column="3"
              Clicked="OnDigitButtonClicked" />
      <Button Text="1"
              StyleId="1"
              Grid.Row="4"
              Grid.Column="0"
              Clicked="OnDigitButtonClicked" />
      <Button Text="2"
              StyleId="2"
              Grid.Row="4"
              Grid.Column="1"
              Clicked="OnDigitButtonClicked" />
      <Button Text="3"
              StyleId="3"
              Grid.Row="4"
              Grid.Column="2"
              Clicked="OnDigitButtonClicked" />
      <Button Text="+"
              StyleId="+"
              Grid.Row="4"
              Grid.Column="3"
              Clicked="OnDigitButtonClicked" />
      <Button Text="&#177;"
              StyleId="plusminus"
              Grid.Row="5"
              Grid.Column="0"
              IsEnabled ="False"
              Clicked="OnDigitButtonClicked" />
      <Button Text="0"
              StyleId="0"
              Grid.Row="5"
              Grid.Column="1"
              Clicked="OnDigitButtonClicked" />
      <Button Text="."
              StyleId="."
              Grid.Row="5"
              Grid.Column="2"
              Clicked="OnDigitButtonClicked" />
      <Button Text="="
              StyleId="="
              Grid.Row="5"
              Grid.Column="3"
              Clicked="OnDigitButtonClicked" />
    </Grid>
  </ContentView.Content>
</ContentPage>